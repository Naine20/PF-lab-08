/* Simple Calculator
• Write a simple calculator program that asks the user to enter two numbers and an 
operator (+, -, *, /), then performs the chosen operation.
• Use a switch statement to handle the operations and print the result.
• Example input: 5, 3, *
• Expected output: "5 * 3 = 15" */

#include<iostream>
using namespace std;

int main()
{
	int num1,num2;
	char oper;
	
	cout<<"Enter first number: "<<endl;
	cin>>num1;
	
	cout<<"Enter second number: "<<endl;
	cin>>num2;
	
	cout<<"Enter operator: "<<endl;
	cin>>oper;
	
	switch(oper)
	{
		case '+' :
			cout<<num1+num2;
			break;
		case '-':
			cout<<num1-num2;
			break;
		case '*':
			cout<<num1*num2;
			break;
		case '/':
			cout<<num1/num2;
			break;
			default:
			cout<<"Invalid Input";
			return 0;
			
	}
}
