/* Write a program that takes an integer (1 to 12) representing a month and uses a switch statement 
to print the corresponding season (e.g., December, January, and February print "Winter"). */

#include<iostream>
using namespace std;

int main()
{
	int n;
	cout<<"Enter number(1-12): ";
	cin>>n;
	
	switch(n)
	{
		case 1:
			cout<<"january\nIt is winter Season";
			break;
		case 2:
			cout<<"February\nIt is winter Season";
			break;
		case 3:
			cout<<"March\nIt is Spring Season";
			break;
		case 4:
			cout<<"April\nIt is Spring Season";
			break;
		case 5:
			cout<<"May\nIt is Spring Season";
			break;
		case 6:
			cout<<"June\nIt is Summer Season";
			break;
		case 7:
			cout<<"July\nIt is Summer Season";
			break;
		case 8:
			cout<<"August\nIt is Summer Season";
			break;
		case 9:
			cout<<"September\nIt is Autumn Season";
			break;
		case 10:
			cout<<"October\nIt is Autumn Season";
			break;
		case 11:
			cout<<"November\nIt is winter Season";
			break;
		case 12:
			cout<<"December\nIt is winter Season";
			break;	
			default:
			cout<<"Invalid Input";
			return 0;
			
	}
}
